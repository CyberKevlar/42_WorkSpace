# /etc/network/interfaces.d/_wil-1_s
# VTEP estático (unicast) - nodo wil-1_s

auto eth0
iface eth0 inet static
    address 10.42.0.1
    netmask 255.255.255.252

auto eth1
iface eth1 inet manual

# --- VXLAN (creación manual mediante pre-up) ---
auto vxlan10
iface vxlan10 inet manual
    pre-up ip link add vxlan10 type vxlan id 10 dev eth0 local 10.42.0.1 remote 10.42.0.2 dstport 4789 || true
    up ip link set vxlan10 up
    post-down ip link del vxlan10 || true

# --- BRIDGE de acceso ---
auto br0
iface br0 inet manual
    pre-up ip link add br0 type bridge || true
    pre-up ip link set eth1 master br0
    pre-up ip link set vxlan10 master br0
    up ip link set br0 up
    post-down ip link del br0 || true