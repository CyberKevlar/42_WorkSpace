#
# ip link add br0 type bridge && ip link set dev br0 up && ip link set dev eth0 up && ip link set dev eth2 up && ip addr flush dev eth2 && ip link add vxlan10 type vxlan id 10 local 1.1.1.3 dstport 4789 && ip link set dev vxlan10 up && brctl addif br0 vxlan10 && brctl addif br0 eth0 && ip addr add 10.1.1.6/30 dev eth2 && ip addr add 1.1.1.3/32 dev lo
#

# Leaf router, or secund router (router-3)

# Create bridge and wake up
ip link add br0 type bridge
ip link set dev br0 up

# Ensure access and uplink are up; clean any old IP on uplink
ip link set dev eth0 up
ip link set dev eth2 up
ip addr flush dev eth2

# Create VXLAN VTEP and link to the underlay address we will place in br0
# Use the loopback IP as the local VTEP ID source for EVPN
ip link add vxlan10 type vxlan id 10 local 1.1.1.3 dstport 4789
ip link set dev vxlan10 up

# Add VXLAN and the access port into the bridge br0 
brctl addif br0 vxlan10
brctl addif br0 eth0

# Put the underlay IP on the uplink interface
ip addr add 10.1.1.6/30 dev eth2

# Ensure loopback address exists for router-id and BGP source
ip addr add 1.1.1.3/32 dev lo

# FRRouting configuration
vtysh <<EOF
configure terminal
!
interface eth2
 ip ospf area 0
 ip ospf network point-to-point
!
interface lo
 ip ospf area 0
!
router ospf
 router-id 1.1.1.3
 passive-interface lo
!
router bgp 1
 bgp router-id 1.1.1.3
 neighbor 1.1.1.1 remote-as 1
 neighbor 1.1.1.1 update-source lo
 address-family l2vpn evpn
  neighbor 1.1.1.1 activate
  advertise-all-vni
 exit
!
end
write memory
EOF
